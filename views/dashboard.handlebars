<section>
  <div class="container">
    <div class="col-12 mb-5 col-auto">
      <h2>Dashboard</h2>
    </div>
    <a class="d-flex align-items-center justify-content-center btn btn-outline-primary mb-4"
      href="/dashboard/create-post">
      <h3>Create a New Post:</h3>
    </a>
  </div>



  <div class="container">
    <a href="/dashboard/edit/{{id}}">
      <div class="col-12 mb-5">

        <div class="card">
          <div class="card-body"></div>
          <h4>{{title}}</h4>
          <h6>Posted On: {{format_date createdAt}}</h6>
        </div>

      </div>

    </a>
  </div>
</section>