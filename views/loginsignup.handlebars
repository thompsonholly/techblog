<section>
  <div class="container mt-5">
    <!-- Login/Sign-up Cards Container  -->
    <div class="row align-items-stretch justify-content-between">

      <!-- Login Card -->
      <div class="col-12 col-lg-2 mb-3 flex-grow-1 forecast-card">
        <div class="card h-100 border-dark">
          <h4 class="card-header">Login</h4>
          <div class="card-body">
            <form class="login-form">
              <div class="mb-3">
                <label for="email-login" class="form-label">Email</label>
                <input type="email" class="form-control" id="email-login">
              </div>
              <div class="mb-4">
                <label for="password-login" class="form-label">Password</label>
                <input type="password" class="form-control" id="password-login">
              </div>
              <button type="submit" class="col-12 btn btn-outline-primary mb-2">Login</button>
            </form>
          </div>
        </div>
      </div>

      <!-- Sign-up Card -->
      <div class="col-12 col-lg-2 mb-3 flex-grow-1 forecast-card">
        <div class="card h-100 border-dark">
          <h4 class="card-header">Sign-up</h4>
          <div class="card-body">
            <form class="signup-form">
              <div class="mb-3">
                <label for="name-signup" class="form-label">Username</label>
                <input type="text" class="form-control" id="name-signup">
              </div>
              <div class="mb-3">
                <label for="email-signup" class="form-label">Email</label>
                <input type="email" class="form-control" id="email-signup" aria-describedby="email-help">
                <div id="email-help" class="form-text">We'll never share your email with anyone else.
                </div>
              </div>
              <div class="mb-4">
                <label for="password-signup" class="form-label">Password</label>
                <input type="password" class="form-control" id="password-signup">
              </div>
              <button type="submit" class="col-12 mb-2 btn btn-outline-primary">Sign-up and Login</button>
            </form>
          </div>
        </div>
      </div>


    </div>
</section>



<script src="./js/login.js"></script>